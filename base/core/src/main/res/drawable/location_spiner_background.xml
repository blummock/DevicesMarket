<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/transparent" />
                    <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                </shape>
            </item>
            <item android:gravity="end|center" android:width="20dp" android:height="20dp" android:end="2dp">
                <shape>
                    <solid android:color="#33AEAEAE" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_baseline_keyboard_arrow_down_24" android:gravity="end|center" />
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/transparent" />
                    <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_baseline_keyboard_arrow_down_24" android:gravity="end|center" />
        </layer-list>
    </item>
</selector>