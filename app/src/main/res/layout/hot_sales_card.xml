<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/hot_sales_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            tools:background="@color/gray"
            tools:src="@drawable/ic_like_color" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/new_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/new_string"
            android:textSize="3pt"
            android:clickable="false"
            android:textColor="@color/white"
            android:background="@drawable/round_background_button" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/hot_sales_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10pt"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/new_icon"
            app:layout_constraintTop_toBottomOf="@id/new_icon"
            android:layout_marginTop="5dp"
            tools:text="Iphone 12" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/hot_sales_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="5pt"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/hot_sales_title"
            app:layout_constraintTop_toBottomOf="@+id/hot_sales_title"
            tools:text="Super mega" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/by_now_button"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:padding="0dp"
            android:text="@string/apply_string"
            android:textColor="@color/black"
            android:foregroundTint="@color/orange"
            android:textSize="5pt"
            app:cornerRadius="3dp"
            app:layout_constraintStart_toStartOf="@+id/hot_sales_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>