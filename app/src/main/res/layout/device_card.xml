<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="15dp"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/likeButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/like_round_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/deviceImage"
            android:src="@drawable/unnamed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/devicePrice"
            tools:text="$1000"
            android:textSize="8pt"
            app:layout_constraintTop_toBottomOf="@id/deviceImage"
            app:layout_constraintBottom_toTopOf="@id/deviceTitle"
            app:layout_constraintStart_toStartOf="@id/deviceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/deviceCost"
            tools:text="$1100"
            android:textSize="5pt"
            android:textColor="@color/gray"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@+id/devicePrice"
            app:layout_constraintBottom_toBottomOf="@id/devicePrice"
            app:layout_constraintStart_toEndOf="@id/devicePrice"
            app:layout_constraintVertical_bias="0.9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/deviceTitle"
            tools:text="Mobile device"
            android:textSize="5pt"
            app:layout_constraintHorizontal_bias="0.2"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>